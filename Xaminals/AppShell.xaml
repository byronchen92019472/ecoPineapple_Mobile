    <FlyoutItem Route="animals"
                Title="Animals"
                FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Home"
             Route="domestic"
             Icon="home.png">

            <ShellContent Route="cats"
                          Style="{StaticResource DomesticShell}"
                          Title="Cats"
                          Icon="cat.png"
                          ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>

        <Tab Title="Issues"
             Route="domestic"
             Icon="issues.svg">
          
            <ShellContent Route="monkeys"
                          Style="{StaticResource MonkeysShell}"
                          Title="Home"
                          Icon="issues.png"
                          ContentTemplate="{DataTemplate views:SustainabilityHome}" />
            <ShellContent Route="dogs"
                          Style="{StaticResource DomesticShell}"
                          Title="Climate"
                          Icon="dog.png"
                          ContentTemplate="{DataTemplate views:DogsPage}" />
            <ShellContent Route="dogs"
                          Style="{StaticResource DomesticShell}"
                          Title="Food"
                          Icon="dog.png"
                          ContentTemplate="{DataTemplate views:DogsPage}" />
            <ShellContent Route="dogs"
                          Style="{StaticResource DomesticShell}"
                          Title="Energy"
                          Icon="dog.png"
                          ContentTemplate="{DataTemplate views:DogsPage}" />
        </Tab>
        <Tab Title="Solutions"
             Route="domestic"
             Icon="products.svg">
            <ShellContent Route="elephants"
                          Style="{StaticResource ElephantsShell}"
                          Title="Home"
                          Icon="solutions.png"
                          ContentTemplate="{DataTemplate views:AboutPage}" />
            <ShellContent Route="dogs"
                          Style="{StaticResource DomesticShell}"
                          Title="Material"
                          Icon="dog.png"
                          ContentTemplate="{DataTemplate views:ElephantsPage}" />
            <ShellContent Route="dogs"
                          Style="{StaticResource DomesticShell}"
                          Title="Sourcing"
                          Icon="dog.png"
                          ContentTemplate="{DataTemplate views:DogsPage}" />
        </Tab>
        <Tab Title="Products"
             Route="domestic"
             Icon="solutions.svg">
            <ShellContent Route="bears"
                          Style="{StaticResource BearsShell}"
                          Title="Home"
                          Icon="products.png"
                          ContentTemplate="{DataTemplate views:BearsPage}" />
            <ShellContent Route="dogs"
                          Style="{StaticResource DomesticShell}"
                          Title="Spoon"
                          Icon="dog.png"
                          ContentTemplate="{DataTemplate views:DogsPage}" />
            <ShellContent Route="dogs"
                          Style="{StaticResource DomesticShell}"
                          Title="Space"
                          Icon="dog.png"
                          ContentTemplate="{DataTemplate views:DogsPage}" />
        </Tab>
    </FlyoutItem>
    
